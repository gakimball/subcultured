{{#if data.episodes.length}}
	{{#with data.episodes.[0]}}
		<div class="bigplayer">
			<div class="bigplayer-quote">
				{{markdown content.quote }}
			</div>
			<hr>
		</div>
	{{/with}}
{{/if}}

{{!-- Main container --}}
<div class="main">
	{{!-- Content --}}
	<div class="main-content">
		<h2>Episodes</h2>

		{{ debug }}

		{{#if data.episodes.length}}
			{{#each data.episodes}}
				<section class="episode">
					<h3 class="episode-title"><a href="#">{{ title }}</a></h3>
					<div class="episode-body">
						<div class="episode-body-thumbnail">
							<img src="{{ image.secure_url }}" alt="Sonic Passion">
						</div>
						<div class="episode-body-info">
							{{markdown content.blurb}}

							{{markdown content.credits}}

							<div class="episode-body-info-quote">{{markdown content.quote}}</div>
						</div>
					</div>
				</section>
			{{/each}}
		{{else}}
			<p>No episodes have been published yet.</p>
		{{/if}}

		<a href="/episodes" class="big-link">View All Episodes &rarr;</a>
	</div>
	{{!-- /Content --}}

	{{!-- Sidebar --}}
	<div class="main-sidebar">
		<section>
			<h2>About</h2>
