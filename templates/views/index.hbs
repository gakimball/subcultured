{{#if data.episodes.length}}
	{{#with data.episodes.[0]}}
		<div class="bigplayer">
			<div class="bigplayer-quote">
				{{markdown content.quote }}
			</div>
			<hr>
		</div>
	{{/with}}
{{/if}}

{{!-- Main container --}}
<div class="main">
	{{!-- Content --}}
	<div class="main-content">
		<h2>Episodes</h2>

		{{ debug }}

		{{#if data.episodes.length}}
			{{#each data.episodes}}
				{{> episode this}}
			{{/each}}
		{{else}}
			<p>No episodes have been published yet.</p>
		{{/if}}

		<a href="/episodes" class="big-link">View All Episodes &rarr;</a>
	</div>
	{{!-- /Content --}}

	{{!-- Sidebar --}}
	<div class="main-sidebar">
		{{> about}}

		{{> subscribe}}
	</div>
	{{!-- /Sidebar --}}
</div>
{{!-- /Main container --}}
